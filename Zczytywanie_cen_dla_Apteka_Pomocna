# Zczytywanie cen

library(rvest)
library(dplyr)
library(openxlsx)

apteka_pomocna_ceny <- data.frame()

zbior_adresow <- c(

  "https://aptekapomocna24.pl/pol_m_Apteka-151.html",
  "https://aptekapomocna24.pl/pol_m_Leki-na-recepte-2093.html",
  "https://aptekapomocna24.pl/pol_m_WITAMINY-188.html",
  "https://aptekapomocna24.pl/pol_m_OPALANIE-2157.html",
  "http://aptekapomocna24.pl/pol_m_Apteka_Przeziebienie-i-grypa-176.html",
  "https://aptekapomocna24.pl/pol_m_MEZCZYZNA-I-KOBIETA-154.html",
  "https://aptekapomocna24.pl/pol_m_Kosmetyki-155.html",
  "https://aptekapomocna24.pl/pol_m_Mama-i-dziecko-156.html"
)

for(adres in zbior_adresow)
{
  link <- read_html(adres)
  
  print(adres)
  
  print("Strona 1")
  
  nazwy <- link %>% html_elements(".product__name") %>% html_text2()
  
  nazwy <- nazwy[which(nazwy != "")]
  
  # ceny_zczytane <- link %>% html_elements(".price") %>% html_text2()
  
  ceny_zczytane <- link %>% html_elements(".price") %>% html_text2()
  
  ceny_zczytane <- regmatches(ceny_zczytane, gregexpr("[[:digit:]]+", ceny_zczytane))
  
  ceny <- rep(0, length(ceny_zczytane))
  
  for(i in 1:length(ceny))
  {
    len_i_el <- length(ceny_zczytane[[i]])
    ceny[i] <- as.double(paste0(ceny_zczytane[[i]][1], ".", ceny_zczytane[[i]][2]))
  }
  
  nazwy <- nazwy[which(!(is.na(ceny)))]
  
  ceny <- ceny[which(!(is.na(ceny)))]
  
  apteka_pomocna_ceny <- rbind(apteka_pomocna_ceny, data.frame(Nazwa = nazwy, Cena = ceny))
  
  print(paste0("Zczytano łącznie ", nrow(apteka_pomocna_ceny), " cen produktów."))
  
  nr_strony <- link %>% html_elements(".pagination__link") %>% html_text2()
  
  nr_strony <- as.double(nr_strony[length(nr_strony) - 1])
  
  print(paste0("Jest ", nr_strony, " stron."))
  
  if(length(nr_strony > 0))
  {
    if(nr_strony > 1)
    {
      for(i in 2:nr_strony)
      {
        link <- read_html(paste0(adres, "?counter=", i - 1))
        
        print(paste0("Strona ", i))
        
        nazwy <- link %>% html_elements(".product__name") %>% html_text2()
        
        nazwy <- nazwy[which(nazwy != "")]
        
        # ceny_zczytane <- link %>% html_elements(".price") %>% html_text2()
        
        ceny_zczytane <- link %>% html_elements(".price") %>% html_text2()
        
        ceny_zczytane <- regmatches(ceny_zczytane, gregexpr("[[:digit:]]+", ceny_zczytane))
        
        ceny <- rep(0, length(ceny_zczytane))
        
        for(i in 1:length(ceny))
        {
          len_i_el <- length(ceny_zczytane[[i]])
          ceny[i] <- as.double(paste0(ceny_zczytane[[i]][1], ".", ceny_zczytane[[i]][2]))
        }
        
        nazwy <- nazwy[which(!(is.na(ceny)))]
        
        ceny <- ceny[which(!(is.na(ceny)))]
        
        apteka_pomocna_ceny <- rbind(apteka_pomocna_ceny, data.frame(Nazwa = nazwy, Cena = ceny))
        
        print(paste0("Zczytano łącznie ", nrow(apteka_pomocna_ceny), " cen produktów."))
      }
    }
  }
}

wsz_apteka_pomocna_ceny <- apteka_pomocna_ceny
apteka_pomocna_ceny <- unique(apteka_pomocna_ceny)

write.xlsx(apteka_pomocna_ceny, paste0(getwd(), "/apteka_pomocna_", Sys.Date(), ".xlsx"))
save.image(paste0(getwd(), "/apteka_pomocna_", Sys.Date(), ".RData"))























wszystko <- apteka_pomocna_ceny

nrow(wszystko)
nrow(unique(wszystko))

wszystko <- unique(wszystko)

wszystko$Nazwa <- toupper(wszystko$Nazwa)

wszystko$Cena <- as.double(wszystko$Cena)

srednie <- rep(0, 2)
wariancje <- rep(0, 2)
nazwy_kategorii <- rep("", 2)
identyfikatory <- rep("", 2)








# 1. (indeks: 400, wiersz: 184) Wyroby farmaceutyczne

syrop <- grepl("SYROP", wszystko$Nazwa, fixed = TRUE)
